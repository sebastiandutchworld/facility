    <template id="stock_dynamic_barcode_labels">

        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <t t-foreach="range(doc.qty)" t-as='l'>
                    <div class="page">
                        <div class="col-4" style="padding:0;">
                            <table style="border-bottom: 0px solid white !important;width: 3in;">
                                <t t-set="barcode_info" t-value="get_barcode_details_info"/>
                                
                                <!-- <tr>
                                    <td style="text-align: Right; font-size:10px;">
                                        <img t-attf-src="/web/binary/company_logo?company" alt="Logo" t-attf-style="width: 100px;height: 30px;"/>
                                    </td>                                    
                                </tr> -->
                                <tr style="font-size:15px;">
                                     <!-- class="label"> -->
                                    <td > 
                                        <span>PN:&#160;</span><span  t-field="doc.product_id.default_code"/>
                                    </td>
                                    <td style="text-align: Right; font-size:10px;">
                                        <img t-attf-src="/web/binary/company_logo?company" alt="Logo" t-attf-style="width: 100px;height: 30px;"/>
                                    </td>
                                </tr>
                                <tr style="font-size:15px;">
                                    <td >
                                        <span>Alt PN: </span><span t-field="doc.product_id.seller_ids.product_code"/>
                                        
                                    </td>
                                </tr>
                                <tr style="font-size:15px;">
                                <!-- class="label"> -->
                                    <td>
                                        <span>NSN: </span><span t-field="doc.product_id.nsn"/>
                                    </td>
                                </tr>
                                <tr style="font-size:15px;">
                                <!-- class="label"> -->
                                    <td >
                                        <span>Description: </span><span t-field="doc.product_id.name"/>
                                    </td>
                                </tr>
                                <tr style="font-size:15px;">
                                    <!-- class="label"> -->
                                    <td >
                                        <span >Condition: </span><span t-field="doc.product_id.product_conditions.code"/>
                                    </td>
                                </tr>
                                <tr style="font-size:15px;">
                                <!-- class="label"> -->
                                    <td>
                                        <span class="label">Quantity: </span><span t-field="doc.qty"/>
                                    </td>
                                </tr>
                                <t t-if="doc.product_id.tracking == 'lot'">
                                    <tr style="font-size:15px;">
                                        <!-- class="label"> -->
                                        <td>
                                            <span>Lot: </span><span t-field="doc.lot_id"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.product_id.tracking == 'serial'">
                                    <tr style="font-size:15px;">
                                        <!-- class="label"> -->
                                        <td>
                                            <span>Serial #: </span><span t-field="doc.lot_id"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.product_id.barcode">
                                    <tr>
                                        <td style="text-align: center; vertical-align: middle; font-size:10px;" class="col-5">
                                            <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % (barcode_info['barcode_type'], doc.product_id.barcode, 600, 100)" 
                                            t-attf-style="width: #{barcode_info['barcode_width']}px;height: #{barcode_info['barcode_height']}px;"
                                                   />
                                            <br />
                                            <span style="font-size:10px;" t-field="doc.product_id.barcode"/>
                                        </td>
                                    </tr>
                                </t>

                            </table>
                        </div>
                    </div>
                    <div style="page-break-before:always;"/>
                </t>
                <div style="page-break-before:always;"/>
            </t>
        </t>
    </template>
</odoo>
