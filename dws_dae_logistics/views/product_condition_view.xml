<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_condition_form" model="ir.ui.view">
        <field name="name">product.condition.form</field>
        <field name="model">product.condition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_condition_tree" model="ir.ui.view">
        <field name="name">product.condition.tree</field>
        <field name="model">product.condition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_state_search" model="ir.ui.view">
        <field name="name">product.condition.tree</field>
        <field name="model">product.condition</field>
        <field name="arch" type="xml">
            <search string="Product Conditions">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record id="product_action" model="ir.actions.act_window">
        <field name="name">Product Condition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.condition</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product condition
            </p>
        </field>
    </record>
    
    <menuitem id="Productstate_product_root_sub"
              name="Product Conditions"
              parent="stock.menu_product_in_config_stock"
              action="product_action"
              sequence="3"/>
</odoo>