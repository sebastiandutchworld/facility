<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="report_purchaseorder_custom" inherit_id="purchase.report_purchaseorder_document">
      <xpath expr="//th[@name='th_description']" position="after">
        <th name="th_cnd"><strong>CND</strong></th>
      </xpath>
      <xpath expr="//td[@id='product']" position="after">
        <td id="condition">
          <span t-field="line.product_id.product_conditions.code"/>
        </td> 
      </xpath>
      <xpath expr="//span[@t-field='line.name']" position="after">
        <br></br>
        <span t-field="line.product_id.nsn"/>
      </xpath>
      <xpath expr="//p[@t-field='o.date_order']" position="replace">
        <p t-field="o.date_order" t-options='{"widget": "date"}'/>
      </xpath>
      <xpath expr="//span[@t-field='line.date_planned']" position="replace">
        <span t-field="line.date_planned" t-options='{"widget": "date"}'/>
      </xpath>
    </template>     

    <template id="report_purchasequotation_document_custom" inherit_id="purchase.report_purchasequotation_document">
      <xpath expr="//span[@t-field='order_line.date_planned']" position="replace">
        <span t-field="order_line.date_planned" t-options='{"widget": "date"}'/>
      </xpath>
      <xpath expr="//span[@t-field='order_line.name']" position="after">
        <br></br>
        <span t-field="order_line.product_id.nsn"/>
      </xpath>      
    </template>
  </data>
</odoo>