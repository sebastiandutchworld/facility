<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <record model="ir.ui.view" id="sale_view_order_tree">
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='name']" position="after">
          <field name="contract_name"/>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="sale_view_quotation_tree">
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_quotation_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='name']" position="after">
          <field name="contract_name"/>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="sale_view_order_form">
      <field name="name">add contract name</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="contract_name" attrs="{'required':1}"/>
          <field name="export_license" />
        </xpath>
        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="tags" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
          <field name="overtime" attrs="{'invisible': 1}"/>
        </xpath>

      </field>
    </record>
    <!--Inherit quotations search view-->
    <record id="view_sale_order_inherit_search" model="ir.ui.view">
      <field name="name">sale.order.search.expand</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
      <field name="arch" type="xml">
        <xpath expr="//search" position="inside">
          <!-- This field will show up on the quick search -->
          <field name="contract_name"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>