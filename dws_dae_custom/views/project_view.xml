<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record id="project_holidaysets_tree" model="ir.ui.view">
            <field name="name">project.holidaysets.tree</field>
            <field name="model">project.holidaysets</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Holidays" import="false">
                    <field name="date" required="1"/>
                    <field name="type" required="1"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <record id="act_project_project_2_project_holidaysets" model="ir.actions.act_window">
            <field name="name">Holidays and Workingdays</field>
            <field name="view_id" ref="project_holidaysets_tree"/>
            <field name="res_model">project.holidaysets</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('project_id', '=', active_id)]</field>
            <field name="context">{
                'search_default_project_id': [active_id],
                'default_project_id': active_id,
            }</field>
            <!--<field name="search_view_id" ref="view_task_search_form"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Here, you can create new holidaysets
                </p>
                <p>
                    Blabla
                </p>
            </field>
        </record>
        <record id="edit_project_ext" model="ir.ui.view">
            <field name="name">project.project.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="sale_timesheet.project_project_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_line_id']" position="after">
                    <field name="project_invoicing"></field>
                </xpath>
            </field>
        </record>
  </data>
</odoo>