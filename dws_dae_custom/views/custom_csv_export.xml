<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_csv_view_form" model="ir.ui.view">
        <field name="name">csv_custom_csv.form</field>
        <field name="model">csv.custom_csv</field>
        <field name="arch" type="xml">
            <form string="Send an SMS">
                <footer>
                    <group>
                        <span>
                            <button string="Download" type="object" class="oe_highlight" name="action_generate_csv"/>
                            <button string="Cancel" class="oe_link" special="cancel" />
                        </span>
                    </group>
                </footer>
            </form>
        </field>
    </record>
    <record id="custom_csv_form_action" model="ir.actions.act_window">
        <field name="name">Custom CSV</field>
        <field name="res_model">csv.custom_csv</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="custom_csv_action" model="ir.actions.act_window">
        <field name="name">Custom CSV export</field>
        <field name="res_model">csv.custom_csv</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>