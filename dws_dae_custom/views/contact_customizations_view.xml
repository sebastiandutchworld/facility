    <record model="ir.ui.view" id="base_view_users_form">
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="attributes">
          <attribute name="readonly">True</attribute>
          <attribute name="required">False</attribute>
        </xpath>
        <xpath expr="/form/sheet/div/h1/field[@name='name']/.." position="after">
          <group>
            <field name="first_name"/>
            <field name="surname_prefix"/>
            <field name="surname"/>
          </group>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="view_users_simple_form_naming">
      <field name="name">Add firstname, lastname prefix and lastname</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_simple_form"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="//h1//field[@name='name']" position="attributes">
            <attribute name="required">False</attribute>
          </xpath>
          <xpath expr="//h1//field[@name='name']/.." position="after">
            <group>
              <field name="first_name"/>
              <field name="surname_prefix"/>
              <field name="surname"/>
            </group>
          </xpath>
        </data>
      </field>
