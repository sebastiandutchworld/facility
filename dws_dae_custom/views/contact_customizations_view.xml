<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_partner_simple_form_naming">
      <field name="name">Add firstname, lastname prefix and lastname</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_simple_form"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="//h1//field[@name='name']/.." position="after">
            <group attrs="{'invisible': [('is_company', '=', True)]}">
              <field name="first_name" attrs=
                      "{'required': [('is_company', '=', False),
                  ('type', '=', 'contact')]}"/>
              <field name="surname_prefix"/>
              <field name="surname" attrs=
                      "{'required': [('is_company', '=', False),
                    ('type', '=', 'contact')]}"/>
            </group>
          </xpath>
        </data>
      </field>
    </record>
