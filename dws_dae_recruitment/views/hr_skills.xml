<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_view_form_ext" model="ir.ui.view">
            <field name="name">hr.employee.view.form.ext</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_skills.hr_employee_view_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//field[@name='date_end']" position="after">-->
<!--                    <field name="aircraft_type"  attrs="{'invisible': [('line_type_id','!=', 'Work experience')]}"/>-->
<!--                    <field name="company" attrs="{'invisible': [('line_type_id','!=', 'Work experience')]}"/>-->
<!--                    <field name="row_display_type"/>-->
<!--                </xpath>-->
                <xpath expr="//page" position="replace">
                    <page name="public" string="ResumÃ©">
                        <div class="row">
                            <div class="o_hr_skills_group o_group_resume col-lg-7 d-flex">
                                <!-- This field uses a custom tree view rendered by the 'hr_resume' widget.
                                    Adding fields in the tree arch below makes them accessible to the widget
                                -->
                                <field mode="tree" nolabel="1" name="resume_line_ids" widget="hr_resume">
                                    <tree>
                                        <field name="line_type_id" readonly="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="description" readonly="1"/>
                                        <field name="date_start" readonly="1"/>
                                        <field name="date_end" readonly="1"/>
                                        <field name="aircraft_type"  attrs="{'invisible': [('line_type_id','!=', 'Work experience')]}" readonly="1"/>
                                        <field name="company" attrs="{'invisible': [('line_type_id','!=', 'Work experience')]}" readonly="1"/>
                                        <field name="row_display_type" readonly="1"/>
                                        <field name="display_type" invisible="1"/>
                                    </tree>
                                </field>
                            </div>
                            <div class="o_hr_skills_group o_group_skills col-lg-5 d-flex flex-column">
                                <separator string="Skills"/>
                                <field mode="tree" nolabel="1" name="employee_skill_ids" widget="hr_skills">
                                    <tree>
                                        <field name="skill_type_id" invisible="1"/>
                                        <field name="skill_id"/>
                                        <field name="skill_level_id"/>
                                        <field name="level_progress" widget="progressbar"/>
                                    </tree>
                                </field>
                            </div>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>