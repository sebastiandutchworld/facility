<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_recruitment_stage_tree_ext" model="ir.ui.view">
        <field name="name">hr.recruitment.stage.tree.ext</field>
        <field name="model">hr.recruitment.stage</field>
        <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="defines_candidate"/>
            </xpath>
        </field>
    </record>
    <record id="hr_recruitment_stage_form_ext" model="ir.ui.view">
        <field name="name">hr.recruitment.stage.form.ext</field>
        <field name="model">hr.recruitment.stage</field>
        <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="defines_candidate"/>
            </xpath>
        </field>
    </record>
</odoo>