<?xml version="1.0"?>
<odoo>
    <data>
         <!-- Template for notifying the admin about a sheet confirmed with the wrong number of hours -->
        <record id="email_template_data_cv_sent_in" model="mail.template">
            <field name="name">CV change notification</field>
            <field name="subject">New CV notification</field>
            <field name="email_to">${ctx.get('email_to')}</field>
            <field name="lang">${object.partner_id and object.partner_id.lang or ''}</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <!--field name="user_signature" eval="False"/-->
            <field name="body_html"><![CDATA[
                 <p>Dear admin,</p>
                <p>Employee ${ctx.get('employee_name')} changed his CV
                </p>]]>
            </field>
        </record>

        <record id="email_template_data_cv_sent_in_recruitment" model="mail.template">
            <field name="name">CV change receive acknowledgement recruitment</field>
