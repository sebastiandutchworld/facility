    <template id="stock_dynamic_barcode_labels">

        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/bi_dynamic_barcode_labels/static/src/scss/layout_standard.css"/>
        </xpath>

        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <t t-foreach="range(doc.qty)" t-as='l'>
                    <div class="page">
                        <div class="col-4" style="padding:0;">
                            <table style="border-bottom: 0px solid white !important;width: 3in;">
                                <t t-set="barcode_info" t-value="get_barcode_details_info"/>
                                
                                <tr>
                                    <td style="text-align: Right; font-size:10px;">
                                        <img t-attf-src="/web/binary/company_logo?company" alt="Logo" t-attf-style="width: 100px;height: 30px;"/>
                                    </td>                                    
                                </tr>
                               
                                <tr>
                                    <td style="text-align: left; font-size:10px;">
                                        <span style="font-size:10px;">PN:&#160;</span><span style="font-size:10px;" t-field="doc.product_id.default_code"/>
                                    </td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <td style="text-align: left, font-size:10px;">
                                        <span style="font-size:10px;">Alt PN: </span><span style="font-size:10px;" t-field="doc.product_id.seller_ids.product_code"/>
                                        <!-- "doc.product_id.vendor_product_code" -->
                                    </td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <td style="text-align: left, font-size:10px;">
                                        <span style="font-size:10px;">NSN: </span><span style="font-size:10px;" t-field="doc.product_id.nsn"/>
                                    </td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <td style="text-align: left, font-size:10px;">
                                        <span style="font-size:10px;">Description: </span><span style="font-size:10px;" t-field="doc.product_id.name"/>
                                    </td>
                                </tr>
                                
                                <tr style="font-size:10px;">
                                    <td style="text-align: left, font-size:10px;">
                                        <span style="font-size:10px;">Condition: </span><span style="font-size:10px;" t-field="doc.product_id.product_conditions"/>
                                    </td>
                                </tr>

                                <tr style="font-size:10px;">
                                    <td style="text-align: left, font-size:10px;">
                                        <span style="font-size:10px;">Quantity: </span><span style="font-size:10px;" t-field="doc.qty"/>
                                    </td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <td style="text-align: left, font-size:10px;">
                                        <span style="font-size:10px;">Lot: </span><span style="font-size:10px;" t-field="doc.lot_id"/>
                                    </td>
                                </tr>
                                <tr style="font-size:10px;">
                                    <td style="text-align: left, font-size:10px;">
                                        <span style="font-size:10px;">Serial #: </span><span style="font-size:10px;" t-field="doc.product_id.name"/>
                                    </td>
                                </tr>

                                <t t-if="doc.product_id.attribute_line_ids">
                                    <tr>
                                        <td style="text-align: center;">
                                            <span t-foreach="doc.product_id.product_template_attribute_value_ids" t-as="attribute_value1">
                                                <span t-esc="attribute_value1.name+','"/>
                                            </span>
                                        </td>
                                    </tr>
                                </t>
                                
                                <t t-if="doc.product_id.barcode">
                                    <tr>
                                        <td style="text-align: center; vertical-align: middle; font-size:10px;" class="col-5">
                                            <img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % (barcode_info['barcode_type'], doc.product_id.barcode, 600, 100)" 
                                            t-attf-style="width: #{barcode_info['barcode_width']}px;height: #{barcode_info['barcode_height']}px;"
                                                   />
                                            <br />
                                            <span style="font-size:10px;" t-field="doc.product_id.barcode"/>
                                        </td>
                                    </tr>
                                </t>
                                <!-- <tr style="line-height:5px">
                                    <td style="padding:10px; font-size:15px;text-align:center">
                                        <t t-if="barcode_info['barcode_currency_position'] == 'before'">
                                            <strong>
                                                <span t-esc="barcode_info['barcode_currency_id'].symbol" />
                                                <span t-field="doc.product_id.list_price"/>
                                            </strong>
                                        </t>
                                        <t t-if="barcode_info['barcode_currency_position'] != 'before'">
                                            <strong>
                                                <span t-field="doc.product_id.list_price"/>
                                                <span t-esc="barcode_info['barcode_currency_id'].symbol" />
                                            </strong>
                                        </t>

                                    </td>
                                </tr> -->
                            </table>
                        </div>
                    </div>
                    <div style="page-break-before:always;"/>
                </t>
                <div style="page-break-before:always;"/>
            </t>
        </t>
    </template>
</odoo>
