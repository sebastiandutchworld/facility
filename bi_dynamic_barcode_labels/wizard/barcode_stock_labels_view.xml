<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_barcode_stock_picking_labels" model="ir.ui.view">
        <field name="name">Barcode Product Labels</field>
        <field name="model">barcode.stock.labels.wiz</field>
        <field name="arch" type="xml">
            <form string="Barcode Product Labels">
                <sheet>
                    <group>
                        <separator string="Products To Print" colspan="4"/>
                        <field name="product_barcode_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id" />
                                <field name="qty" />
                                <field name="lot_id" />
                                <!-- <field name="alt_pn" /> -->
                                <!-- <field name="lot_id" widget="many2many_tags" groups="stock.group_production_lot" attrs="{'invisible': ['|', ('show_details_visible', '=', False), ('has_tracking', '!=', 'serial')]}" optional="hide" options="{'create': [('parent.use_create_lots', '=', True)]}" context="{'default_company_id': company_id, 'default_product_id': product_id, 'active_picking_id': parent.id}" domain="[('product_id','=',product_id)]"/> -->
                            </tree>
                        </field>
                    </group>
                    <span class="o_form_label" style="font-weight:bold;">More Information about barcode configuration data, please navigate to Inventory -> Settings -> Barcode Configuration</span>
                </sheet>
                <footer>
                    <button name="print_barcode_labels" string="Print" type="object" 
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_picking_view_barcode_product_labels" model="ir.actions.act_window">
        <field name="name">Barcode Product Labels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barcode.stock.labels.wiz</field>
        <field name="view_mode">form</field>
        <field name='target'>new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
    </record>
</odoo>
